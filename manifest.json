{
  "manifest_version": 2,

  "name": "Netflix Skip Intro",
  "description": "This extension auto skips the intro for Netflix shows.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": 
    {
        "scripts": ["background.js"]
    },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.netflix.com/*",
        "https://*.amazon.com/*",
        "https://*.peacocktv.com/*" 
      ],
      "js": [
          "jquery.min.js",
        "utilities.js"
      ],
      
    "run_at": "document_end"
    }
    
  ]
}